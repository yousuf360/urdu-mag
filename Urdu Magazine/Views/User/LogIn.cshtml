@model Urdu_Magazine.Models.UserLogInVM

@using (Html.BeginForm("LogIn", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h1 class="langStyle">@Urdu_Magazine.Resources.Resource.LogInDisplay</h1>
    <div>
        @Html.ValidationMessageFor(model => model.LogInEmail, "", new { @class = "text-danger" })

        @Html.EditorFor(model => model.LogInEmail, new { htmlAttributes = new { @class = "form-control", @dir = "ltr" ,@placeholder=@Html.DisplayNameFor(model=>model.LogInEmail)} })
        

    </div>
            <div>
                @Html.ValidationMessageFor(model => model.LogInPassword, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.LogInPassword, new { htmlAttributes = new { @class = "form-control", @dir = "ltr", @placeholder = @Html.DisplayNameFor(model => model.LogInPassword) } })

            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <input type="submit" class="btn btn-danger btn-block" value="@(@Urdu_Magazine.Resources.Resource.LogInButton)" />
               
                
            </div>

            <div class="clearfix"></div>

            <div class="separator">
                <h1 class="change_link">
                   
                    @Urdu_Magazine.Resources.Resource.NewToSite <a href="#signup" class="to_register">@Urdu_Magazine.Resources.Resource.CreateAnAccount</a>
                </h1>

                <div class="clearfix"></div>
                <br />

                <div>
                    <h1 style="font-family:'Jameel Noori Nastaleeq' !important"><a href="@Url.Action("Index","Home")"><i class="fa fa-book"></i> @Urdu_Magazine.Resources.Resource.UrduMagazine</a></h1>
                    <p>@Urdu_Magazine.Resources.Resource.TermsAndCondition</p>
                </div>
            </div>
            
}
